@using Orbit.Application.Dtos.Responses
@using Orbit.Domain.Entities

@model User

@{
    Layout = "~/Views/Shared/_LayoutRenderBase.cshtml";
}

<header class="content-top">
    <div class="btn-back">
        <img src="~/images/arrow-left-solid.svg" alt="Left-Arrow" />
    </div>
    <div class="title-user">
        <span>@Model.UserName</span>
    </div>
</header>

<div class="background-img">
    <img src="" alt="" />
    <span class="text-img">Background image</span>
</div>

<main class="content-main">
    <div class="profiles-specs">
        <div class="profile-img">
            <img src="@Url.Action("GetProfileImage", "Profile", new { userID = Model.UserId })" alt="Profile Image" />
        </div>
        <div class="profile-description">
            <h2>@Model.UserName</h2>
            <p>@Html.Raw("@")@Model.UserName</p>
            <p>
                @if (Model.UserDescription == null)
                {
                    <text>➕Adicionar descrição</text>
                }
                else
                {
                    <text>@Model.UserDescription</text>
                }
            </p>
            <div class="profile-followers">
                <p>Followers <span>@Model.Users!.Count</span></p>
                <p>Following <span>@Model.Followers!.Count</span></p>
            </div>
        </div>

        <div class="edit-profile">
            <button class="btn-edit" id="btn-follow">Follow Profile</button>
        </div>
    </div>


    @if(Model.IsPrivateProfile == 1)
    {
        
        <div class="navigation-bar" display="none">
            <div class="content-nav">Publications</div>
            <div class="content-nav">Projects</div>
            <div class="content-nav">Curriculum</div>
            <div class="content-nav">Media</div>
        </div>
    }
    else
    {
        <div class="navigation-bar">
            <div class="content-nav">Publications</div>
            <div class="content-nav">Projects</div>
            <div class="content-nav">Curriculum</div>
            <div class="content-nav">Media</div>
        </div>
    }

</main>

@section links {
    <link rel="stylesheet" href="~/css/Dasboard.css" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap"
          rel="stylesheet">
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            asp-fallback-src="~/libs/jQuery/js/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    <script>
        $(document).ready(() => {
            $('#btn-follow').click(() => {
                event.preventDefault();

                var formData = new FormData();

                formData.append('id', @Model.UserId);
                $.ajax({
                    url: '/Notifications/Index',
                    type: 'POST',
                    data: {
                        user: "@Model.UserName",
                        message: `O usuário @ViewBag.ViewExternalUsernameFollower começou a te seguir!`
                    },
                    success: function (response) {
                        console.log(response);
                    },
                    error: function (xhr, status, error) {
                        console.log(error)
                    }
                });

                formData.append('id', @Model.UserId);
                formData.append('followerUserName', '@ViewBag.ViewExternalUsernameFollower');
                $.ajax({
                    url: '/Profile/Follow',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        alert('Perfil seguido com sucesso!');
                    },
                    error: function (xhr, status, error) {
                        alert('Ocorreu um erro ao seguir o perfil: ', xhr.responseText);
                    }
                });
            });
        });
    </script>
}
